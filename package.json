{
  "name": "@pooltogether/foundry-template",
  "version": "1.0.0",
  "description": "Template to kickstart a Foundry project",
  "author": {
    "name": "PoolTogether Inc.",
    "url": "https://github.com/pooltogether"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pooltogether/foundry-template.git"
  },
  "scripts": {
    "clean": "forge clean",
    "compile": "forge compile",
    "coverage": "forge coverage --report lcov && lcov --extract lcov.info -o lcov.info 'src/*' && genhtml lcov.info -o coverage",
    "----------LOCAL-DEPLOYMENT-SCRIPTS----------": "",
    "anvil:ethereum:local": "anvil --fork-url $MAINNET_RPC_URL --port $LOCAL_L1_PORT --mnemonic \"$LOCAL_MNEMONIC\"",
    "anvil:optimism:local": "anvil --fork-url $OPTIMISM_RPC_URL --port $LOCAL_L2_PORT --mnemonic \"$LOCAL_MNEMONIC\"",
    "deal:ethereum:local": "forge script script/helpers/Deal.s.sol:Deal --rpc-url http://localhost:$LOCAL_L1_PORT --private-key $LOCAL_PRIVATE_KEY --sender $SENDER --broadcast",
    "deal:optimism:local": "forge script script/helpers/Deal.s.sol:Deal --rpc-url http://localhost:$LOCAL_L2_PORT --private-key $LOCAL_PRIVATE_KEY --sender $SENDER --broadcast",
    "deploy:rng-auction:local": "forge script script/deploy/DeployL1RngAuction.s.sol:DeployL1RngAuction --rpc-url http://localhost:$LOCAL_L1_PORT --private-key $LOCAL_PRIVATE_KEY --sender $SENDER --broadcast",
    "deploy:pool:local": "forge script script/deploy/DeployL2PrizePool.s.sol:DeployL2PrizePool --code-size-limit $LOCAL_CODE_SIZE_LIMIT_BYTES --rpc-url http://localhost:$LOCAL_L2_PORT --private-key $LOCAL_PRIVATE_KEY --sender $LOCAL_SENDER --broadcast",
    "deploy:aave-v3-factory:local": "forge script script/deploy/yield-vault/aave-v3/DeployAaveV3Factory.s.sol:DeployAaveV3Factory --rpc-url http://localhost:$LOCAL_L2_PORT --private-key $LOCAL_PRIVATE_KEY --sender $LOCAL_SENDER --broadcast",
    "deploy:aave-v3-yield-vaults:local": "forge script script/deploy/yield-vault/aave-v3/DeployAaveV3YieldVault.s.sol:DeployAaveV3YieldVault --rpc-url http://localhost:$LOCAL_L2_PORT --private-key $LOCAL_PRIVATE_KEY --sender $LOCAL_SENDER --broadcast",
    "deploy:vaults:local": "forge script script/deploy/DeployVault.s.sol:DeployVault --rpc-url http://localhost:$LOCAL_L2_PORT --private-key $LOCAL_PRIVATE_KEY --sender $LOCAL_SENDER --broadcast",
    "deploy:twab-delegator:local": "forge script script/deploy/DeployTwabDelegator.s.sol:DeployTwabDelegator --rpc-url http://localhost:$LOCAL_L2_PORT --private-key $LOCAL_PRIVATE_KEY --sender $LOCAL_SENDER --broadcast",
    "deploy:ethereum-contracts:local": "npm run deploy:rng-auction:local",
    "deploy:optimism-contracts:local": "npm run deploy:pool:local && npm run deploy:aave-v3-factory:local && npm run deploy:aave-v3-yield-vaults:local && npm run deploy:vaults:local && npm run deploy:twab-delegator:local",
    "----------OPTIMISM-DEPLOYMENT-SCRIPTS----------": "",
    "deploy:pool:optimism": "forge script script/deploy/DeployL2PrizePool.s.sol:DeployL2PrizePool --rpc-url $OPTIMISM_GOERLI_RPC_URL --sender $SENDER --private-key $PRIVATE_KEY --broadcast --verify --etherscan-api-key $OPTIMISM_ETHERSCAN_API_KEY -vvvv",
    "deploy:stable-token:optimism": "forge script script/deploy/DeployStableToken.s.sol:DeployStableToken --rpc-url $OPTIMISM_GOERLI_RPC_URL --sender $SENDER --private-key $PRIVATE_KEY --broadcast --verify --etherscan-api-key $OPTIMISM_ETHERSCAN_API_KEY",
    "deploy:token:optimism": "forge script script/deploy/DeployToken.s.sol:DeployToken --rpc-url $OPTIMISM_GOERLI_RPC_URL --sender $SENDER --private-key $PRIVATE_KEY --broadcast --verify --etherscan-api-key $OPTIMISM_ETHERSCAN_API_KEY",
    "deploy:set-token-price:optimism": "forge script script/deploy/SetTokenPrice.s.sol:SetTokenPrice --rpc-url $OPTIMISM_GOERLI_RPC_URL --sender $SENDER --private-key $PRIVATE_KEY --broadcast --verify --etherscan-api-key $OPTIMISM_ETHERSCAN_API_KEY",
    "deploy:set-stable-token-role:optimism": "forge script script/deploy/SetStableTokenRole.s.sol:SetStableTokenRole --rpc-url $OPTIMISM_GOERLI_RPC_URL --sender $SENDER --private-key $PRIVATE_KEY --broadcast --verify --etherscan-api-key $OPTIMISM_ETHERSCAN_API_KEY",
    "deploy:set-token-role:optimism": "forge script script/deploy/SetTokenRole.s.sol:SetTokenRole --rpc-url $OPTIMISM_GOERLI_RPC_URL --sender $SENDER --private-key $PRIVATE_KEY --broadcast --verify --etherscan-api-key $OPTIMISM_ETHERSCAN_API_KEY",
    "deploy:yield-vault:optimism": "forge script script/deploy/DeployYieldVault.s.sol:DeployYieldVault --rpc-url $OPTIMISM_GOERLI_RPC_URL --sender $SENDER --private-key $PRIVATE_KEY --broadcast --verify --etherscan-api-key $OPTIMISM_ETHERSCAN_API_KEY",
    "deploy:set-vault-role:optimism": "forge script script/deploy/SetVaultRole.s.sol:SetVaultRole --rpc-url $OPTIMISM_GOERLI_RPC_URL --sender $SENDER --private-key $PRIVATE_KEY --broadcast --verify --etherscan-api-key $OPTIMISM_ETHERSCAN_API_KEY -vvvv",
    "deploy:set-yield-vault-role:optimism": "forge script script/deploy/SetYieldVaultRole.s.sol:SetYieldVaultRole --rpc-url $OPTIMISM_GOERLI_RPC_URL --sender $SENDER --private-key $PRIVATE_KEY --broadcast --verify --etherscan-api-key $OPTIMISM_ETHERSCAN_API_KEY",
    "deploy:vault:optimism": "forge script script/deploy/DeployVault.s.sol:DeployVault --rpc-url $OPTIMISM_GOERLI_RPC_URL --sender $SENDER --private-key $PRIVATE_KEY --broadcast --verify --etherscan-api-key $OPTIMISM_ETHERSCAN_API_KEY -vvv",
    "deploy:twab-delegator:optimism": "forge script script/deploy/DeployTwabDelegator.s.sol:DeployTwabDelegator --rpc-url $OPTIMISM_GOERLI_RPC_URL --sender $SENDER --private-key $PRIVATE_KEY --broadcast --verify --etherscan-api-key $OPTIMISM_ETHERSCAN_API_KEY -vvv",
    "deploy:contracts:optimism": "npm run deploy:stable-token:optimism && npm run deploy:token:optimism && npm run deploy:pool:optimism && npm run deploy:yield-vault:optimism && npm run deploy:vault:optimism && npm run deploy:twab-delegator:optimism",
    "deploy:config-contracts:optimism": "npm run deploy:set-token-price:optimism && npm run deploy:set-stable-token-role:optimism && npm run deploy:set-token-role:optimism && npm run deploy:set-vault-role:optimism && npm run deploy:set-yield-vault-role:optimism",
    "----------ETHEREUM-DEPLOYMENT-SCRIPTS----------": "",
    "deploy:rng-auction:ethereum": "forge script script/deploy/DeployL1RngAuction.s.sol:DeployL1RngAuction --rpc-url $MAINNET_RPC_URL  --sender $SENDER --private-key $PRIVATE_KEY --broadcast --verify --etherscan-api-key $ETHERSCAN_API_KEY",
    "deploy:pool:ethereum": "forge script script/deploy/DeployPool.s.sol:DeployPool --rpc-url $MAINNET_RPC_URL --sender $SENDER --private-key $PRIVATE_KEY --broadcast --verify --etherscan-api-key $ETHERSCAN_API_KEY",
    "deploy:stable-token:ethereum": "forge script script/deploy/DeployStableToken.s.sol:DeployStableToken --rpc-url $MAINNET_RPC_URL --sender $SENDER --private-key $PRIVATE_KEY --broadcast --verify --etherscan-api-key $ETHERSCAN_API_KEY",
    "deploy:token:ethereum": "forge script script/deploy/DeployToken.s.sol:DeployToken --rpc-url $MAINNET_RPC_URL --sender $SENDER --private-key $PRIVATE_KEY --broadcast --verify --etherscan-api-key $ETHERSCAN_API_KEY",
    "deploy:set-token-price:ethereum": "forge script script/deploy/SetTokenPrice.s.sol:SetTokenPrice --rpc-url $MAINNET_RPC_URL --sender $SENDER --private-key $PRIVATE_KEY --broadcast --verify --etherscan-api-key $ETHERSCAN_API_KEY",
    "deploy:set-stable-token-role:ethereum": "forge script script/deploy/SetStableTokenRole.s.sol:SetStableTokenRole --rpc-url $MAINNET_RPC_URL --sender $SENDER --private-key $PRIVATE_KEY --broadcast --verify --etherscan-api-key $ETHERSCAN_API_KEY",
    "deploy:set-token-role:ethereum": "forge script script/deploy/SetTokenRole.s.sol:SetTokenRole --rpc-url $MAINNET_RPC_URL --sender $SENDER --private-key $PRIVATE_KEY --broadcast --verify --etherscan-api-key $ETHERSCAN_API_KEY",
    "deploy:yield-vault:ethereum": "forge script script/deploy/DeployYieldVault.s.sol:DeployYieldVault --rpc-url $MAINNET_RPC_URL --sender $SENDER --private-key $PRIVATE_KEY --broadcast --verify --etherscan-api-key $ETHERSCAN_API_KEY",
    "deploy:set-vault-role:ethereum": "forge script script/deploy/SetVaultRole.s.sol:SetVaultRole --rpc-url $MAINNET_RPC_URL --sender $SENDER --private-key $PRIVATE_KEY --broadcast --verify --etherscan-api-key $ETHERSCAN_API_KEY",
    "deploy:set-yield-vault-role:ethereum": "forge script script/deploy/SetYieldVaultRole.s.sol:SetYieldVaultRole --rpc-url $MAINNET_RPC_URL --sender $SENDER --private-key $PRIVATE_KEY --broadcast --verify --etherscan-api-key $ETHERSCAN_API_KEY",
    "deploy:vault:ethereum": "forge script script/deploy/DeployVault.s.sol:DeployVault --rpc-url $MAINNET_RPC_URL --sender $SENDER --private-key $PRIVATE_KEY --broadcast --verify --etherscan-api-key $ETHERSCAN_API_KEY",
    "deploy:twab-delegator:ethereum": "forge script script/deploy/DeployTwabDelegator.s.sol:DeployTwabDelegator --rpc-url $MAINNET_RPC_URL --sender $SENDER --private-key $PRIVATE_KEY --broadcast --verify --etherscan-api-key $ETHERSCAN_API_KEY",
    "deploy:contracts:ethereum": "npm run deploy:stable-token:ethereum && npm run deploy:token:ethereum && npm run deploy:pool:ethereum && npm run deploy:yield-vault:ethereum && npm run deploy:vault:ethereum && npm run deploy:twab-delegator:ethereum",
    "deploy:config-contracts:ethereum": "npm run deploy:set-token-price:ethereum && npm run deploy:set-stable-token-role:ethereum && npm run deploy:set-token-role:ethereum && npm run deploy:set-vault-role:ethereum && npm run deploy:set-yield-vault-role:ethereum",
    "----------LINTING----------": "",
    "format": "prettier --config .prettierrc --write \"**/*.{json,md,ts,sol,yml}\"",
    "format:file": "prettier --config .prettierrc --write",
    "gen:local": "ts-node ./script/utils/generateLocalList.ts",
    "gen:testnet": "ts-node ./script/utils/generateTestnetList.ts",
    "hint": "solhint --config \"./.solhint.json\" \"{src,test}/**/*.sol\"",
    "lint-staged": "lint-staged",
    "prepack": "npm run clean && npm run compile",
    "prepare": "husky install",
    "test": "forge test"
  },
  "devDependencies": {
    "husky": "8.0.3",
    "lint-staged": "13.1.0",
    "prettier": "2.8.3",
    "prettier-plugin-solidity": "1.1.1",
    "solhint": "3.3.8",
    "solhint-plugin-prettier": "0.0.5",
    "ts-node": "10.9.1"
  },
  "files": [
    "src/**",
    "out/**"
  ],
  "dependencies": {
    "@types/node": "^20.4.7",
    "typescript": "^5.1.6"
  }
}
